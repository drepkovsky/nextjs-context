{
	"$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"files": {
		"ignoreUnknown": true,
		"ignore": [
			"**/sw*.js",
			"**/service-worker.js",
			"**/fallback*.js",
			"**/node_modules/**",
			"**/dist/**",
			"**/build/**",
			"**/.git/**",
			"**/.vscode/**",
			"**/.next*"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useTemplate": "warn",
				"noNonNullAssertion": "off"
			},
			"nursery": {},
			"suspicious": {
				"noEmptyInterface": "off",
				"noExplicitAny": "off",
				"noConsoleLog": "warn"
			},
			"security": {
				"noDangerouslySetInnerHtml": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 110,
		"indentStyle": "space",
		"indentWidth": 2
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "single",
			"jsxQuoteStyle": "single",
			"trailingComma": "es5",
			"semicolons": "asNeeded",
			"lineWidth": 100
		}
	}
}
